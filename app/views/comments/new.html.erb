<h1>Create New Comment</h1>
<%= form_for([@user, @post, Comment.new], url: user_post_comments_path(@user, @post)) do |form| %>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content, placeholder: 'Your comment...' %>
  </div>
  
  <%= form.submit 'Add Comment' %>
<% end %>

<%= link_to 'Back to Post', user_post_path(@user, @post) %>
